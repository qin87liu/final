
<%= form_for @assignment do |form| %>
  <div class="form-group">
    <p>
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </p>

    <p>
      <%= form.label :num_assignments %>
      <%= form.text_field :num_assignments, class: "form-control" %>
    </p>

    <p>
      <%= form.label :due_date %>
      <%= form.text_field :due_date, class: "form-control" %>
    </p>

    <p>
      <%= form.label :estimate_time %>
      <%= form.text_field :estimate_time, class: "form-control" %>
    </p>

    <p>
      <%= form.label :assistant %>
      <%= form.collection_select(:assistant_id, Assistant.all, :id, :name, {}, { class: "form-control" }) %>
    </p>

  </div>
  <%= form.button 'Claim Assignment!', class: "btn btn-success" %>
<% end %>