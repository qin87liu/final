
<%= form_for @teacher do |form| %>
  <div class="form-group">
    <p>
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </p>
    <p>
      <%= form.label :school %>
      <%= form.collection_select(:school_id, School.all, :id, :name, {}, { class: "form-control" }) %>
    </p>

    <p>
      <%= form.label :subject %>
      <%= form.text_field :subject, class: "form-control" %>
    </p>

    <p>
      <%= form.label :grade %>
      <%= form.text_field :grade, class: "form-control" %>
    </p>

  </div>
  <%= form.button 'Update Teacher', class: "btn btn-success" %>
<% end %>